rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Production environment - secure rules for live users
    
    // User profiles - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Activities - public read, admin write
    match /activities/{activityId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Categories - public read, admin write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Blog posts - public read, admin write
    match /blog-posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Subscriptions - users can only access their own
    match /subscriptions/{subscriptionId} {
      allow read, write: if request.auth != null && request.auth.uid == subscriptionId;
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Admin operations - only admins
    match /admin/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Analytics and logs - admin only
    match /analytics/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 